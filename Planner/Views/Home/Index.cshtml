@model List<Planner.Models.Domain.WeekDay>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 ry-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Week Day
            </h1>
            <p class="lead">
                Запись пациентов на исследования в лаборатории радионуклидов.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/1193743/pexels-photo-1193743.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="Week Day - Laboratorium radiations"
                 class="d-block mx-lg-auto img-fluid" width="300" />
        </div>
    </div>
</div>

<style>
    .no-underline-hover {
        text-decoration: none; /* Убрать подчеркивание текста */
        transition: font-size 0.2s; /* Добавить анимацию изменения размера шрифта */
    }

        .no-underline-hover:hover {
            font-size: 1.1em; /* Увеличить размер шрифта при наведении */
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.Any())
            {
                @foreach (var weekDay in Model)
                {
                    <div class="mb-5 bg-light box-shadow">
                        <h2 class="mb-2"> @weekDay.Day.ToShortDateString() </h2>
                        <h2 class="mb-2"> @weekDay.ActivityDay </h2>
                        <h2 class="mb-2"> @weekDay.QuantityMbK </h2>

                        <div class="container py-5">
                            @if(weekDay.Patients != null)
                            {
                                @foreach (var people in weekDay.Patients)
                                {
                                    <table class="table">
                                        <thread>
                                            <tr>
                                                <th>@people.Name</th>
                                                <th>@people.Surname</th>
                                                <th>@people.Research</th>
                                            </tr>
                                        </thread>
                                    </table>
                                }
                            }
                            else
                            {
                                 <p>No Patient found!</p>
                            }
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-dark">
                                <a class="text-white no-underline-hover"
                                   asp-area=""
                                   asp-controller="Patient"
                                   asp-action="Add"
                                   asp-route-weekDayId="@weekDay.Id">
                                    Add Patient
                                </a>
                            </button>
                            <button type="submit" class="btn btn-danger ms-2">
                            <a class="text-white no-underline-hover"
                            asp-area=""
                            asp-controller="WeekDay"
                            asp-action="Edit"
                            asp-route-id="@weekDay.Id">
                                Edit Day
                            </a>
                            </button>

                        </div>
                    </div>
                   
                }
            }

        </div>
    </div>
</div>
