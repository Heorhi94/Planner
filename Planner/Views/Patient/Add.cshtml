@model Planner.Models.ViewModels.AddPatientReqest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Patient</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Display Surname</label>
            <input type="text" class="form-control" id="displayName" asp-for="Surname" />
        </div>

        <div class="mb-3">
            <label class="form-label">Registration day</label>
            <input type="date" class="form-control" id="displayName" asp-for="RegistrationDay" />
        </div>

        <div class="mb-3">
            <label class="form-label">Research</label>
            <input type="text" class="form-control" id="displayName" asp-for="Research" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>

    </form>

</div>

