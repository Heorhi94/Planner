@model Planner.Models.ViewModels.AddPatientRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Patient</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <input type="text" name="patientWeekDayId" value="@Model.PatientWeekDayId" asp-for="PatientWeekDayId" readonly/> 
        </div>
        <div class="mb-3">
            <input type="text" name="quantityMBK" value="@Model.QuantityMBK" asp-for="QuantityMBK" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Day</label>
            <input type="text" name="registrationDay" value="@Model.RegistrationDay.ToShortDateString()" asp-for="RegistrationDay" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Display Surname</label>
            <input type="text" class="form-control" id="surname" asp-for="Surname" />
        </div>

        <div class="mb-3">
            <label class="form-label">Research</label>
            <select class="form-select" id="research" asp-for="Research">
                <option value="">-- Select Research --</option>
                @foreach (var researchName in Model.NameResearchList)
                {
                    <option value="@researchName">@researchName</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark" id="submit-button">Submit</button>
        </div>
        <div id="message-container" style="display:none;"></div>

        <script>
            document.getElementById("submit-button").addEventListener("click", function (e) {
                var name = document.getElementById("name").value;
                var surname = document.getElementById("surname").value;
                var research = document.getElementById("research").value;

                if (name === "" || surname === "" || research === "") {
                    
                    var messageContainer = document.getElementById("message-container");
                    messageContainer.innerHTML = "<div class='alert alert-danger'>Все поля должны быть заполнены.</div>";
                    messageContainer.style.display = "block";
                    e.preventDefault();
                }
            });
        </script>


    </form>

</div>

